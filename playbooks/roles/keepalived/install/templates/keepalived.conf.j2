global_defs {
    router_id LVS_DEVEL
}
vrrp_script check_node {
  script "/etc/keepalived/check_node.sh"
  interval 3
  weight -2
  fall 10
  rise 2
}

vrrp_instance VI_1 {
{% if inventory_hostname == first_keepalived %}
    state MASTER
{% else %}
    state BACKUP
{% endif %}
    interface {{ keepalived_interface }}
    virtual_router_id 51
    priority {{ priority }}
    authentication {
        auth_type PASS
        auth_pass 42
    }
    unicast_src_ip {{ keepalived_ip }}
    unicast_peer {
{% for peer in peer_keepaliveds %}
        {{ hostvars[peer]['keepalived_ip'] }}
{% endfor %}
    }
    virtual_ipaddress {
        {{ keepalived_vip }}
    }
    track_script {
        check_node
    }
}
