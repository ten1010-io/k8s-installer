apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ name }}
spec:
  capacity:
    storage: {{ storage }}
  storageClassName: {{ storage_class }}
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  local:
    path: {{ path }}
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
            - key: kubernetes.io/hostname
              operator: In
              values:
                - {{ knn }}
