vrrp_script check_node {
  script "/etc/keepalived/check_node.sh"
  interval 3
  weight -2
  fall 10
  rise 2
}

vrrp_instance VI_1 {
  state {{ state }}
  interface {{ interface }}
  unicast_src_ip {{ unicast_src_ip }}
  priority {{ priority }}
  unicast_peer {
{%- for peer in unicast_peers %}
    {{ peer }}
{%- endfor %}
  }
  virtual_router_id 51
  virtual_ipaddress {
    {{ ki_cp_ha_mode_vip }}
  }
  authentication {
    auth_type PASS
    auth_pass 42
  }
  track_script {
    check_node
  }
}
